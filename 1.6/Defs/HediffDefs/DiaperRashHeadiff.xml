<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="InfectionBase">
    <defName>DiaperRash</defName>
    <label>diaper rash</label>
    <description>A moderate to severe skin irritation, caused by not changing often enough.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <makesSickThought>false</makesSickThought>
		<makesAlert>true</makesAlert>
    <tendable>true</tendable>
    <stages>
      <li>
        <painOffset>0.15</painOffset>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>12</baseTendDurationHours>
        <disappearsAtTotalTendQuality>2</disappearsAtTotalTendQuality>
      </li>
    </comps>
  </HediffDef>
</Defs>