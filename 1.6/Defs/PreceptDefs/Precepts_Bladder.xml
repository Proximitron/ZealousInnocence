<Defs>

  <!-- Issue -->

  <IssueDef>
    <defName>Bladder</defName>
    <label>bladder removal</label>
    <iconPath>Things/Organ/Bladder/Bladder</iconPath>
  </IssueDef>

  <!-- HistoryEvents -->

  <HistoryEventDef>
    <defName>GotUnbladdered</defName>
    <label>got unbladdered</label>
