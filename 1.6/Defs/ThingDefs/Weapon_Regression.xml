	<ThingDef ParentName="BaseBullet">
    <defName>Bullet_WaterSpray</defName>
    <label>foy concentrate</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>FoyWater</damageDef>
      <damageAmountBase>5</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <speed>40</speed>
			<flyOverhead>false</flyOverhead>
    </projectile>
  </ThingDef>
	
	<DamageDef Name="FoyWaterBase" Abstract="True">
    <harmsHealth>false</harmsHealth>
    <makesBlood>false</makesBlood>
		<workerClass>ZealousInnocence.Worker_RegressionDamage</workerClass>

		<!-- Gameplay feel -->
		<harmsHealth>true</harmsHealth>
		<makesBlood>false</makesBlood>
		<externalViolence>true</externalViolence>
		<execution>true</execution>
		<isRanged>true</isRanged>

		<!-- Visuals / sounds -->
		<impactSoundType>Blunt</impactSoundType>       <!-- still uses bullet impact sounds -->
		<armorCategory>Sharp</armorCategory>
		<makesAnimalsFlee>false</makesAnimalsFlee>
		<harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>

		<!-- Overkill and body logic -->
		<overkillPctToDestroyPart>0</overkillPctToDestroyPart>
		<hediff>Bruise</hediff>                         <!-- harmless mark if any -->

		<!-- Optional flavor for logs -->
		<deathMessage>{0} got regressed.</deathMessage>
  </DamageDef>
		
	<DamageDef ParentName="FoyWaterBase">
		<defName>FoyWater</defName>
		<label>FOY splash</label>
		
		<deathMessage>{0} got killed by water pressure.</deathMessage>

		<modExtensions>
			<li Class="ZealousInnocence.RegressionDamageExtension">
				<magnitudePerDamage>0.012</magnitudePerDamage>
				<reduceValue>0.7</reduceValue>
				<hediffCaused>RegressionDamage_FoyWater_SkinContact</hediffCaused>
			</li>
		</modExtensions>
	</DamageDef>
	
	<DamageDef>
		<defName>RegressionEffectDamage</defName>
